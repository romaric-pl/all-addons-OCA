<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="view_mail_contact_type_form" model="ir.ui.view">
            <field name="name">mail.contact.type.form</field>
            <field name="model">mail.contact.type</field>
            <field name="arch" type="xml">
                <form string="Contact Type">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="code" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_mail_contact_type_tree" model="ir.ui.view">
            <field name="name">mail.contact.type.tree</field>
            <field name="model">mail.contact.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>
</odoo>
