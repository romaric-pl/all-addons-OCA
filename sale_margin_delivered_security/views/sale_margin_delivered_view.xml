<odoo>
    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin_delivered.view_order_form" />
        <field name="arch" type="xml">
            <field name="purchase_price_delivery" position="attributes">
                <attribute
                    name="groups"
                >sale_margin_security.group_sale_margin_security</attribute>
            </field>
            <field name="margin_delivered_percent" position="attributes">
                <attribute
                    name="groups"
                >sale_margin_security.group_sale_margin_security</attribute>
            </field>
            <field name="margin_delivered" position="attributes">
                <attribute
                    name="groups"
                >sale_margin_security.group_sale_margin_security</attribute>
            </field>
        </field>
    </record>
</odoo>
