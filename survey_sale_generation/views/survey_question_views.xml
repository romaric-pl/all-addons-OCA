<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_question_form" model="ir.ui.view">
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='suggested_answer_ids']/.." position="after">
                <group
                    name="Linked product"
                    attrs="{'invisible': [('question_type', '!=', 'numerical_box')]}"
                >
                    <field name="product_id" />
                </group>
            </xpath>
            <xpath expr="//field[@name='value']" position="after">
                <field
                    name="product_id"
                    attrs="{'column_invisible': [('parent.question_type', '=', 'matrix')]}"
                />
            </xpath>
            <xpath expr="//field[@name='comments_allowed']/.." position="after">
                <group name="sales" string="Sales">
                    <field
                        name="show_in_sale_order_comment"
                        attrs="{'invisible': [('question_type', 'in', ['matrix', 'simple_choice', 'multiple_choice'])]}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
