<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="res_config_settings_view_form_inherit_shipping" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.shipping</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="website_sale.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//div[@id='sale_shipping_settings']" position="inside">
        <div class="col-12 col-lg-6 o_setting_box" id="cancel_restrict_setting">
          <div class="o_setting_left_pane">
          </div>
          <div class="o_setting_right_pane">
            <label
                            string="Cancellation Restriction Period"
                            for="cancel_restrict_days"
                        />
            <div class="text-muted">
              Number of days before the scheduled delivery date within which order cancellations are
              restricted.
            </div>
            <field name="cancel_restrict_days" />
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
