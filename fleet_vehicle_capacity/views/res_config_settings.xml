<odoo>

    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="fleet.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[hasclass('settings')]/div[@id='fleet']"
                position="inside"
            >

                <div class="row mt16 o_settings_container" id="vehicle_weight_uom">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="vehicle_weight_uom_id" />
                            <div class="text-muted">
                                Set the weight unit of measure for vehicles and capacity
                            </div>
                            <div class="mt8">
                                <field
                                    name="vehicle_weight_uom_id"
                                    class="o_light_label"
                                    required="True"
                                />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container" id="vehicle_volume_uom">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="vehicle_volume_uom_id" />
                            <div class="text-muted">
                                Set the volume unit of measure for vehicles capacity
                            </div>
                            <div class="mt8">
                                <field
                                    name="vehicle_volume_uom_id"
                                    class="o_light_label"
                                    required="True"
                                />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container" id="vehicle_passenger_uom">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="vehicle_passenger_uom_id" />
                            <div class="text-muted">
                                Set the passenger unit of measure for vehicles capacity
                            </div>
                            <div class="mt8">
                                <field
                                    name="vehicle_passenger_uom_id"
                                    class="o_light_label"
                                    required="True"
                                />
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>


</odoo>
