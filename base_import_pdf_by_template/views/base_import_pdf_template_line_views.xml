<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="base_import_pdf_template_line_view_tree" model="ir.ui.view">
        <field name="name">base.import.pdf.template.line.tree</field>
        <field name="model">base.import.pdf.template.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="related_model" />
                <field name="field_id" />
                <field name="search_field_id" />
                <field name="value_type" />
            </tree>
        </field>
    </record>
    <record id="base_import_pdf_template_line_view_form" model="ir.ui.view">
        <field name="name">base.import.pdf.template.line.form</field>
        <field name="model">base.import.pdf.template.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="main_group">
                        <group name="left">
                            <field name="model" invisible="1" />
                            <field name="related_model" widget="radio" />
                            <field
                                name="field_id"
                                attrs="{'invisible': [('related_model', '=', False)]}"
                                options="{'no_create': True}"
                            />
                            <field name="field_relation" invisible="1" />
                            <field
                                name="column"
                                attrs="{'invisible': [('related_model', '!=', 'lines')]}"
                            />
                            <field
                                name="pattern"
                                attrs="{'invisible': [('value_type', '=', 'fixed')], 'required': [('value_type', '!=', 'fixed')]}"
                            />
                            <field
                                name="value_type"
                                widget="radio"
                                attrs="{'invisible': [('field_id', '=', False)]}"
                            />
                            <field
                                name="search_field_id"
                                attrs="{'invisible': ['|', ('field_id', '=', False),('value_type', '=', 'fixed')]}"
                            />
                            <field name="search_field_ttype" invisible="1" />
                            <field name="search_field_relation" invisible="1" />
                            <field
                                name="search_subfield_id"
                                attrs="{'invisible': [('search_field_ttype', '!=', 'one2many')]}"
                            />
                            <!-- Fixed value !-->
                            <field
                                name="fixed_value_char"
                                string="Fixed value"
                                attrs="{'invisible': ['|', ('value_type', '!=', 'fixed'),('field_ttype', '!=', 'char')]}"
                            />
                            <field
                                name="fixed_value_date"
                                string="Fixed value"
                                attrs="{'invisible': ['|', ('value_type', '!=', 'fixed'),('field_ttype', '!=', 'date')]}"
                            />
                            <field
                                name="fixed_value_datetime"
                                string="Fixed value"
                                attrs="{'invisible': ['|', ('value_type', '!=', 'fixed'),('field_ttype', '!=', 'datetime')]}"
                            />
                            <field
                                name="fixed_value_float"
                                string="Fixed value"
                                attrs="{'invisible': ['|', ('value_type', '!=', 'fixed'),('field_ttype', '!=', 'float')]}"
                            />
                            <field
                                name="fixed_value_html"
                                string="Fixed value"
                                attrs="{'invisible': ['|', ('value_type', '!=', 'fixed'),('field_ttype', '!=', 'html')]}"
                            />
                            <field
                                name="fixed_value_integer"
                                string="Fixed value"
                                attrs="{'invisible': ['|', ('value_type', '!=', 'fixed'),('field_ttype', '!=', 'integer')]}"
                            />
                            <field
                                name="fixed_value_selection"
                                string="Fixed value"
                                attrs="{'invisible': ['|', ('value_type', '!=', 'fixed'),('field_ttype', '!=', 'selection')]}"
                            />
                            <field
                                name="fixed_value_text"
                                string="Fixed value"
                                attrs="{'invisible': ['|', ('value_type', '!=', 'fixed'),('field_ttype', '!=', 'text')]}"
                            />
                            <field
                                name="default_value"
                                string="Fixed value"
                                attrs="{'invisible': ['|', ('value_type', '=', 'fixed'),('field_relation', '=', False)]}"
                            />
                            <!-- Fixed value !-->
                            <field
                                name="log_distinct_value"
                                attrs="{'invisible': ['|', ('field_id', '=', False),('value_type', '=', 'fixed')]}"
                            />
                            <field
                                name="fixed_value"
                                attrs="{'invisible': ['|', ('value_type', '!=', 'fixed'),('field_relation', '=', False)]}"
                            />
                        </group>
                        <group name="right">
                            <field name="field_ttype" invisible="1" />
                            <field
                                name="date_format"
                                attrs="{'invisible': [('field_ttype', 'not in', ('date', 'datetime'))]}"
                            />
                            <field
                                name="time_format"
                                attrs="{'invisible': [('field_ttype', '!=', 'datetime')]}"
                            />
                            <field
                                name="decimal_separator"
                                attrs="{'invisible': [('field_ttype', 'not in', ('float', 'monetary'))]}"
                            />
                            <field
                                name="thousand_separator"
                                attrs="{'invisible': [('field_ttype', 'not in', ('float', 'monetary'))]}"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page
                            string="Mapped"
                            name="page_mapped_ids"
                            attrs="{'invisible': ['|', ('value_type', '=', 'fixed'),('field_relation', '=', False)]}"
                        >
                            <field name="mapped_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="origin" />
                                    <field name="value" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
