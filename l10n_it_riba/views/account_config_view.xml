<odoo>
    <record id="view_account_config_settings_riba" model="ir.ui.view">
        <field name="name">view_account_config_settings_riba</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="taxcloud_settings" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="default_taxes"
                    title="RiBa Configuration"
                >
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">RiBa Collection Fees</span>
                        <span
                            class="fa fa-lg fa-building-o"
                            title="Product used as Service for RiBa Collection Fees"
                            aria-label="Product used as Service for RiBa Collection Fees"
                            groups="base.group_multi_company"
                            role="img"
                        />
                        <div class="text-muted">
                            Product used as Service for RiBa Collection Fees
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label
                                    string="Product"
                                    for="due_cost_service_id"
                                    class="col-lg-3 o_light_label"
                                />
                                <field name="due_cost_service_id" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
