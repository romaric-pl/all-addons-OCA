<odoo>
    <data>
        <template id="report_l10nvatintraprint">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            <h2>Partner VAT Intra</h2>

                            <div class="row mt32 mb32">
                                <strong>Company Name: </strong>
                                <span t-esc="res_company.name"/>
                            </div>
                            <div class="row mt32 mb32">
                                <strong>Vat Number: </strong>
                                <span t-esc="res_company.partner_id.vat"/>
                            </div>
                            <div class="row mt32 mb32">
                                <strong>Partners without VAT: </strong>
                                <span t-esc="o.partner_wo_vat or '-'"/>
                            </div>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Partner Name</th>
                                        <th>Partner VAT</th>
                                        <th>Code (Tax Code)</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.client_ids" t-as="l">
                                        <td><span t-field="l.partner_name"/></td>
                                        <td><span t-field="l.vat"/></td>
                                        <td><span t-field="l.code"/></td>
                                        <td><span t-field="l.amount" t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/></td>
                                    </tr>
                                </tbody>
                            </table>

                            <p><strong>Total: </strong><span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/></p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
