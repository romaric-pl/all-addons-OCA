<?xml version="1.0" ?>
<odoo>
    <record id="view_move_form_display_discount" model="ir.ui.view">
        <field name="name">view.move.form.display.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="price_total_no_discount" />
                    <field name="discount_total" />
                </xpath>

                <xpath
                    expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
                    position="after"
                >
                    <field name="discount_total" optional="show" />
                </xpath>
            </data>
        </field>
    </record>
</odoo>
