<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">ecotaxe.base.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view" />
        <field name="arch" type="xml">
            <group name="properties" position="after">
                <group name="ecotaxe" col="4">
                    <label
                        for="ecotaxe_line_product_ids"
                        string="Product Template Ecotaxe classif"
                    />
                    <div>
                        <field name="ecotaxe_line_product_ids" colspan="2" nolabel="1">
                            <tree editable="bottom">
                                <field name="classification_id" />
                                <field name="force_amount" />
                                <field name="amount" />
                            </tree>
                        </field>
                    </div>
                    <field name="ecotaxe_amount" />
                </group>
            </group>
        </field>
    </record>
</odoo>
