<odoo>

    <record id="view_partner_id_numbers_form_inherit_add_chatter" model="ir.ui.view">
        <field name="name">view.partner.id.numbers.form.inherit.add.chatter</field>
        <field name="model">res.partner.id_number</field>
        <field
            name="inherit_id"
            ref="partner_identification.view_partner_id_numbers_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
