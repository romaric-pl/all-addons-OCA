<odoo>

    <record id="view_sii_reference_invoice_form" model="ir.ui.view">
        <field name="name">sii.reference.invoice.form</field>
        <field name="model">sii.reference</field>
        <field name="inherit_id"
               ref="l10n_cl_sii_reference.view_sii_reference_form"/>
        <field name="arch" type="xml">
            <field name='code' position="after">
                <field name='invoice_id'/>
            </field>
        </field>
    </record>

    <record id="view_sii_reference_invoice_tree" model="ir.ui.view">
        <field name="name">sii.reference.invoice.tree</field>
        <field name="model">sii.reference</field>
        <field name="inherit_id"
               ref="l10n_cl_sii_reference.view_sii_reference_tree"/>
        <field name="arch" type="xml">
            <field name='name' position="after">
                <field name='invoice_id'/>
            </field>
        </field>
    </record>

</odoo>
