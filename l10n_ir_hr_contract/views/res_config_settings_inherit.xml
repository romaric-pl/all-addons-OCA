<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record
        id="res_config_settings_view_form_inherit_l10n_ir_hr_contract"
        model="ir.ui.view"
    >
        <field
            name="name"
        >res.config.settings.view.form.inherit.l10n_ir_hr_contract</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form" />
        <field name="priority" eval="80" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']" position="inside">
                    <h2>Iran Localization</h2>
                    <div class="row mt16 o_settings_container" id="l10n_ir_hr_payroll">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <label for="default_wage" string="Salary" />
                                <div class="text-muted">
                                    Configure Default Values for Iran Salary
                                </div>
                                <group class="mt16" name="default_advantages">
                                    <label for="default_wage" string="Salary" />
                                    <div>
                                        <field name="default_wage" nolabel="1" />
                                        <span>Rials / month</span>
                                    </div>
                                    <label
                                    for="default_l10n_ir_daily_wages"
                                    string="Daily wages"
                                />
                                    <div>
                                        <field
                                        name="default_l10n_ir_daily_wages"
                                        nolabel="1"
                                    />
                                        <span>Rials / day</span>
                                    </div>
                                    <label
                                    for="default_l10n_ir_house_allowance"
                                    string="House Allowance"
                                />
                                    <div>
                                        <field
                                        name="default_l10n_ir_house_allowance"
                                        nolabel="1"
                                    />
                                        <span>Rials / month</span>
                                    </div>
                                    <label
                                    for="default_l10n_ir_grocery_allowance"
                                    string="Grocery Allowance"
                                />
                                    <div>
                                        <field
                                        name="default_l10n_ir_grocery_allowance"
                                        nolabel="1"
                                    />
                                        <span>Rials / month</span>
                                    </div>
                                    <label
                                    for="default_l10n_ir_child_allowance"
                                    string="Child Allowance"
                                />
                                    <div>
                                        <field
                                        name="default_l10n_ir_child_allowance"
                                        nolabel="1"
                                    />
                                        <span>Rials / month</span>
                                    </div>
                                </group>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
