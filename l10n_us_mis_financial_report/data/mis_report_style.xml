<odoo>
    <!-- New Styles -->
    <record id="style_double_header_indent" model="mis.report.style">
        <field name="name">PL/BS double indented header</field>
        <field name="font_weight_inherit">false</field>
        <field name="font_weight">bold</field>
        <field name="indent_level_inherit">false</field>
        <field name="indent_level">2</field>
    </record>
    <record id="style_triple_header_indent" model="mis.report.style">
        <field name="name">PL/BS triple indented header</field>
        <field name="font_weight_inherit">false</field>
        <field name="font_weight">bold</field>
        <field name="indent_level_inherit">false</field>
        <field name="indent_level">3</field>
    </record>
    <record id="style_details_triple_indent" model="mis.report.style">
        <field name="name">PL/BS triple indented details</field>
        <field name="indent_level_inherit">false</field>
        <field name="indent_level">3</field>
    </record>
    <record id="style_details_cuadruple_indent" model="mis.report.style">
        <field name="name">PL/BS cuadruple indented details</field>
        <field name="indent_level_inherit">false</field>
        <field name="indent_level">4</field>
    </record>
    <record id="style_hide" model="mis.report.style">
        <field name="name">Hide</field>
        <field name="hide_always_inherit">false</field>
        <field name="hide_always">true</field>
    </record>
</odoo>
