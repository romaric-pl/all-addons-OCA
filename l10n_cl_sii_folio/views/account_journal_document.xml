<odoo>

    <record id="view_journal_sii_document_class_form" model="ir.ui.view">
        <field name="name">Journal SII Documents Form</field>
        <field name="model">account.journal.document</field>
        <field name="arch" type="xml">
            <form string="Journal SII Documents">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="True"/>
                            <field name="journal_id"/>
                            <field name="class_id"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="sequence_id" required="True"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
