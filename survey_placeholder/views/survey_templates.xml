            >question.question_placeholder</attribute>
        </xpath>
    </template>
    <template
        id="question_date"
        name="Question: date box placeholder"
        inherit_id="survey.question_date"
    >
        <xpath expr='//input' position="attributes">
            <attribute
                name="t-att-placeholder"
            >question.question_placeholder</attribute>
        </xpath>
    </template>
    <template
        id="question_datetime"
        name="Question: datetime box placeholder"
        inherit_id="survey.question_datetime"
    >
        <xpath expr='//input' position="attributes">
            <attribute
                name="t-att-placeholder"
            >question.question_placeholder</attribute>
        </xpath>
    </template>
</odoo>
